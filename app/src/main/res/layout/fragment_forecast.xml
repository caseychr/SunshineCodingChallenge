<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verticalGuideline"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/currentWeatherLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#6faff9"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline">

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atanta, GA"
            android:textSize="28dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cityTextView"
            app:layout_constraintStart_toStartOf="@id/cityTextView"
            app:layout_constraintEnd_toEndOf="@id/cityTextView">

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/opensans_regular"
                android:src="@drawable/ic_weather_cloudy_white"
                app:layout_constraintTop_toTopOf="@id/weatherImageLayout"
                app:layout_constraintStart_toStartOf="@id/weatherImageLayout"/>

            <TextView
                android:id="@+id/weatherTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/opensans_regular"
                app:layout_constraintTop_toTopOf="@id/weatherImageLayout"
                app:layout_constraintStart_toEndOf="@+id/weatherImageView"
                app:layout_constraintBottom_toBottomOf="@id/weatherImageView"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/degreesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="78\u00B0"
            android:textSize="60dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_regular"
            app:layout_constraintTop_toBottomOf="@id/weatherImageLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/feelsLikeTempTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Feels Like 82"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/degreesTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/forecastTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:text="10-Day Forecast"
        android:textColor="#003459"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeatherLayout"
        app:layout_constraintBottom_toTopOf="@id/forecastRecyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecastRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/forecastTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>