<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="42dp"
    android:layout_marginEnd="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/weatherImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_weather_cloudy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dayTextView"
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#003459"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/weatherImageView"/>

    <TextView
        android:id="@+id/weatherTextView"
        android:text="Cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintTop_toBottomOf="@id/dayTextView"
        app:layout_constraintStart_toEndOf="@id/weatherImageView"/>

    <TextView
        android:id="@+id/maxDegreesTextView"
        android:text="77\u00B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#003459"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/minDegreesTextView"
        android:text="57\u00B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maxDegreesTextView"/>

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Humidity: 97"
        app:layout_constraintStart_toEndOf="@id/weatherImageView"
        app:layout_constraintBottom_toTopOf="@id/pressureTextView"/>

    <TextView
        android:id="@+id/pressureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure: 97"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintStart_toEndOf="@id/weatherImageView"
        app:layout_constraintBottom_toTopOf="@id/windTextView"/>

    <TextView
        android:id="@+id/windTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind: 97"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintStart_toEndOf="@id/weatherImageView"
        app:layout_constraintBottom_toTopOf="@id/bottomBorderImageView"/>

    <ImageView
        android:id="@+id/bottomBorderImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_border"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>